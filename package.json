{
  "name": "turing-task-manager",
  "version": "1.0.0",
  "description": "Alien-inspired retro terminal task manager with nested tasks",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "task-manager",
    "retro",
    "terminal"
  ],
  "author": {
    "name": "zarcaxm",
    "email": "zarcaxm@users.noreply.github.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zarcaxm/Turing.git"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.turing.taskmanager",
    "productName": "Turing Task Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "zarcaxm",
      "repo": "Turing"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Turing-Task-Manager-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "zarcaxm@users.noreply.github.com"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
